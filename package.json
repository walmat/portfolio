{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "oxlint src --nextjs-plugin --react-perf-plugin --deny-warnings",
    "format": "oxfmt src",
    "format:check": "oxfmt src --check",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "coverage-test": "jest --coverage --maxWorkers=50%",
    "coverage-test:watch": "jest --coverage --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "generate": "yarn plop --plopfile ./generators/plopfile.js",
    "postinstall": "husky install",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "oxfmt",
      "yarn lint --fix"
    ]
  },
  "dependencies": {
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@vercel/analytics": "^1.4.1",
    "clsx": "^2.1.1",
    "cookies-next": "^5.1.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.15.0",
    "gray-matter": "^4.0.3",
    "next": "^16.1.3",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-grid-layout": "1.5.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/mailchimp__mailchimp_marketing": "^3.0.20",
    "@types/node": "^25.0.9",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/react-grid-layout": "1.3.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.0.0",
    "plop": "^4.0.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3"
  }
}
